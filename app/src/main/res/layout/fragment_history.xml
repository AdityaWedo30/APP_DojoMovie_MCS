<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#A2C900"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logoonly" />

        <ImageView
            android:layout_width="400px"
            android:layout_height="90px"
            android:src="@drawable/fontlogo" />
    </LinearLayout>

    <!-- Total Spent Display -->
    <TextView
        android:id="@+id/tvTotalSpent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Spent: Rp 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:background="#E8F5E8"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:gravity="center" />

    <!-- RecyclerView for history -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTransactions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:visibility="visible" />

    <!-- Empty History Message -->
    <TextView
        android:id="@+id/tvNoTransactions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="No transactions yet\n\nStart buying movie tickets to see your history here!"
        android:textSize="16sp"
        android:textColor="#666"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone" />

</LinearLayout>
